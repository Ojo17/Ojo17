{
    "singleQuote": true,
    "arrowParens": "avoid",

    "indent_size": 4,
    "indent_char": " ",
    "css": {
        "indent_size": 2
    },
    "beautify.language": {
        "js": {
            "type": ["javascript", "json"],
            "filename": [".jshintrc", ".jsbeautifyrc"]

        },
        "css": ["css", "scss"],
        "html": ["htm", "html"],

        "beautify.ignore": ["*/test.js", "**/spec/*", "**/test/**/*"]

    }
}